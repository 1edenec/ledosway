### APPS DEFAULTS
# Assign workspaces
assign [app_id="librewolf"] 3
for_window [app_id="librewolf"] focus

assign [class="librewolf"] 3
for_window [class="librewolf"] focus

assign [app_id="pcmanfm-qt"] 2
for_window [app_id="pcmanfm-qt"] focus

assign [app_id="kotatogramdesktop"] 2
for_window [app_id="kotatogramdesktop"] focus
for_window [app_id="kotatogram-desktop"] floating enable, resize set width 60 ppt height 50 ppt

assign [ class="Steam" ] 4
for_window [ class="Steam" ] focus

for_window [app_id="qt5ct"] floating enable
for_window [class="qt5ct" instance="qt5ct"] floating enable, resize set width 60 ppt height 50 ppt

for_window [app_id="imv"] floating enable

# set floating (nontiling) for special apps:
for_window [class="Lxappearance"] floating enable, resize set width 60 ppt height 50 ppt
for_window [app_id="qalculate-gtk"] floating enable, resize set width 60 ppt height 50 ppt
for_window [app_id="gsimplecal"] move position 40ppt -2ppt, border pixel 2

# set floating for window roles
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [window_role="About"] floating enable
for_window [title="File Operation Progress"] floating enable, border pixel 1, sticky enable, resize set width 40 ppt height 30 ppt
for_window [app_id="librewolf" title="Library"] floating enable, border pixel 1, sticky enable, resize set width 40 ppt height 30 ppt
for_window [app_id="floating_shell_portrait"] floating enable, border pixel 1, sticky enable, resize set width 30 ppt height 40 ppt
for_window [title="Picture in picture"] floating enable, sticky enable

# virt-manager
for_window [title="Virtual Machine Manager"] floating enable
for_window [title="QEMU\/KVM - Connection Details"] floating enable

# support windows
for_window [title="Picture-in-Picture"] floating enable, sticky enable, resize set width 33ppt height 33ppt, move position 67ppt 67ppt, border pixel 4
for_window [title="Delete Files"] floating enable
for_window [title="Copy Files"] floating enable
for_window [title="Overwrite Files"] floating enable
for_window [title="Move files"] floating enable
for_window [title="Save File"] floating enable
for_window [title="Preferences"] floating enable
for_window [title="File Properties"] floating enable
for_window [title="Mount"] floating enable
for_window [title="Execute file"] floating enable
for_window [title="Open database"] floating enable

for_window [app_id="file-roller"] floating enable, resize set width 50 ppt height 50 ppt
for_window [app_id="wdisplays"] floating enable, resize set width 50 ppt height 70 ppt

for_window [title="PortProton" class="Yad"] floating enable

