### OUTPUT

# Set wallpaper:
output * bg ~/.config/sway/sway.png fill

# put screens to position
#output HDMI-A-1 pos 0 0 mode 1920x1080@75.002Hz bg #000000 solid_color
#output * adaptive_sync on
output HDMI-A-1 {
	pos  0 0
	subpixel rgb
}

output eDP-1 {
		#mode 1920x1080@60.201Hz
		pos 760 1440
		adaptive_sync on
		subpixel rgb
}

# assign workspaces
workspace {
		1 output eDP-1
		2 output eDP-1

		3 output HDMI-A-1
		4 output HDMI-A-1
		0 output HDMI-A-1
}


