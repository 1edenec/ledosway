#!/bin/bash
# This script is the SUDO_ASKPASS variable, meaning that it will be used as a
# password prompt if needed.

# sudo prompt is "$1"
#prompt="$(echo "$1" | sed -e "s/://g")"
pass=$(wofi --show=dmenu -P --conf=$HOME/.config/wofi/config.sudo) <&-

if [[ "$pass" != "" ]]
then
	echo "$pass"
else
	exit
fi


